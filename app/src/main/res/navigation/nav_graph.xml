<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment1">

    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.alucintech.saci.InicioFragment"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_inicioFragment_to_alumnoFragment"
            app:destination="@id/alumnoFragment" />
    </fragment>
    <fragment
        android:id="@+id/alumnoFragment"
        android:name="com.alucintech.saci.AlumnoFragment"
        android:label="fragment_alumno"
        tools:layout="@layout/fragment_alumno" >
        <action
            android:id="@+id/action_alumnoFragment_to_consultaCarnet"
            app:destination="@id/consultaCarnet" />
        <action
            android:id="@+id/action_alumnoFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
        <action
            android:id="@+id/action_alumnoFragment_to_consultaEvento"
            app:destination="@id/consultaEvento" />
    </fragment>
    <fragment
        android:id="@+id/carnetFragment"
        android:name="com.alucintech.saci.fragments.CarnetFragment"
        android:label="fragment_carnet"
        tools:layout="@layout/fragment_carnet" />
    <fragment
        android:id="@+id/consultaCarnet"
        android:name="com.alucintech.saci.ConsultaCarnet"
        android:label="fragment_consulta_carnet"
        tools:layout="@layout/fragment_consulta_carnet" >
        <action
            android:id="@+id/action_consultaCarnet_to_alumnoFragment"
            app:destination="@id/alumnoFragment" />
    </fragment>
    <fragment
        android:id="@+id/consultaEvento"
        android:name="com.alucintech.saci.ConsultaEvento"
        android:label="fragment_consulta_evento"
        tools:layout="@layout/fragment_consulta_evento" >
        <action
            android:id="@+id/action_consultaEvento_to_alumnoFragment"
            app:destination="@id/alumnoFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment1"
        android:name="com.alucintech.saci.onboardingFragment1"
        android:label="fragment_onboarding1"
        tools:layout="@layout/fragment_onboarding1" >
        <action
            android:id="@+id/action_onboardingFragment1_to_onboardingFragment2"
            app:destination="@id/onboardingFragment2" />
        <action
            android:id="@+id/action_onboardingFragment1_to_inicioFragment"
            app:destination="@id/inicioFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment2"
        android:name="com.alucintech.saci.onboardingFragment2"
        android:label="fragment_onboarding2"
        tools:layout="@layout/fragment_onboarding2" >
        <action
            android:id="@+id/action_onboardingFragment2_to_inicioFragment"
            app:destination="@id/inicioFragment" />
    </fragment>
    <fragment
        android:id="@+id/carnetFragment2"
        android:name="com.alucintech.saci.fragments.carnetFragment2"
        android:label="fragment_carnet2"
        tools:layout="@layout/fragment_carnet2" />
    <fragment
        android:id="@+id/carnetFragment3"
        android:name="com.alucintech.saci.fragments.carnetFragment3"
        android:label="fragment_carnet3"
        tools:layout="@layout/fragment_carnet3" />
    <fragment
        android:id="@+id/carnetFragment4"
        android:name="com.alucintech.saci.fragments.carnetFragment4"
        android:label="fragment_carnet4"
        tools:layout="@layout/fragment_carnet4" />
</navigation>